#!/usr/bin/env ruby
# frozen_string_literal: true

# # Prevent failures from being reported twice.

# require 'chagall'
require_relative '../lib/chagall'

begin
  Chagall::Cli.run
rescue StandardError => e
  puts "  \e[31mERROR (#{e.class}): #{e.message}\e[0m"
  puts e.backtrace if ENV['VERBOSE'] || ENV['DEBUG']
  exit 1
end
